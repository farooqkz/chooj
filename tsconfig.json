{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "types": ["inferno"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2022",
    "paths": {
      "KaiUI": ["./node_modules/KaiUI"]
    }
  },
  "exclude": [
    "dist",
    "src/sw.ts",
    "/node_modules"
  ]
}
